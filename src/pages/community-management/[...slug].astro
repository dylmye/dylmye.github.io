---
import { type CollectionEntry, getCollection, render } from "astro:content";
import ItemBlockquote from "../../components/ItemBlockquote.astro";
import ItemHeading from "../../components/ItemHeading.astro";
import ItemImageFigure from "../../components/ItemImageFigure.astro";
import ItemOrderedList from "../../components/ItemOrderedList.astro";
import ItemParagraph from "../../components/ItemParagraph.astro";
import ItemUnorderedList from "../../components/ItemUnorderedList.astro";
import CmPortfolioItem from "../../layouts/cmPortfolioItem.astro";

export async function getStaticPaths() {
	const posts = await getCollection("communityMgmtPortfolio");
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<"communityMgmtPortfolio">;

const post = Astro.props;
const { Content } = await render(post);
---

<CmPortfolioItem {...post.data}>
  <Content
    components={{
      h2: ItemHeading,
      ol: ItemOrderedList,
      ul: ItemUnorderedList,
      img: ItemImageFigure,
      p: ItemParagraph,
      blockquote: ItemBlockquote,
    }}
  />
</CmPortfolioItem>
